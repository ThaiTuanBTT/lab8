<div class="container col-md-6 text-center mt-3">
<form class="card bg-light p-4" action="/add" method="post">
<h1>Add new student</h1>
<div class="form-group mt-3">
    <label class="h6 text-success">Name</label>
    <input 
    class="form-control"
    type="text" 
    name="fullname" 
    required
    minlength="3" 
    maxlength="30" 
    />
</div>
<div class="form-group">
    <label class="h6 text-success">Age</label>
    <input 
    type="number" 
    name="age" 
    required
    min="1" 
    max="120" 
    />
</div>
<div class="form-group">
    <label class="h6 text-success">Email</label>
    <input 
    type="text" 
    name="email"
    required
    min="3" 
    maxlength="">
</div>
    Image:
    <input type="text" name="image" required />
    <br></br>
    <input type="submit" value="Add">
</form>
</div>